{
  "name": "Item",
  "type": "object",
  "properties": {
    "product_name": {
      "type": "string",
      "description": "The primary product name"
    },
    "product_model": {
      "type": "string",
      "description": "Specific model number if available"
    },
    "store_name": {
      "type": "string",
      "description": "Name of the retail store"
    },
    "purchase_date": {
      "type": "string",
      "format": "date",
      "description": "Date of purchase"
    },
    "total_price": {
      "type": "number",
      "description": "Total price paid"
    },
    "currency": {
      "type": "string",
      "description": "Currency code or symbol"
    },
    "warranty_period": {
      "type": "string",
      "description": "Warranty duration description"
    },
    "warranty_expiration_date": {
      "type": "string",
      "format": "date",
      "description": "Calculated warranty expiration date"
    },
    "category": {
      "type": "string",
      "enum": [
        "Electronics",
        "Appliances",
        "Furniture",
        "Clothing",
        "Tools",
        "Other"
      ],
      "description": "Product category"
    },
    "receipt_image_url": {
      "type": "string",
      "description": "URL to the original receipt image"
    },
    "manual_url": {
      "type": "string",
      "description": "URL to product manual PDF"
    },
    "user_notes": {
      "type": "string",
      "description": "User's personal notes about the item"
    },
    "processing_status": {
      "type": "string",
      "enum": [
        "processing",
        "completed",
        "failed"
      ],
      "default": "processing",
      "description": "Status of AI processing"
    },
    "market_value": {
      "type": "number",
      "description": "Estimated current market value"
    },
    "market_value_last_updated": {
      "type": "string",
      "format": "date-time",
      "description": "When market value was last calculated"
    },
    "serial_number": {
      "type": "string",
      "description": "Product serial number if available"
    },
    "condition": {
      "type": "string",
      "enum": [
        "excellent",
        "good",
        "fair",
        "poor"
      ],
      "default": "good",
      "description": "Current condition of the item"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "User-defined tags for better organization"
    },
    "is_archived": {
      "type": "boolean",
      "default": false,
      "description": "Whether the item is archived"
    }
  },
  "required": [
    "product_name",
    "processing_status"
  ]
}